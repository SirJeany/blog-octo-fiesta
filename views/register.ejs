<%- include('start_html') %>
<main>
    <% if(message){ %>
        <div class="container">
            <div class="message-box">
                <h3 class="text-center"><%= message %></h3>
            </div>
        </div>
    <% } %>
    <div class="container mb-5">
        <div class="row">
            <div class="col-5">
                <h2>Thanks for your interest!</h2>
                <p style="font-size: large;">
                    This 'blog app' is to demonstrate my ability to build a website from scratch.
                    <br>
                    <br>
                    For this website I used <strong>Node.js</strong> to handle serverside JS with <strong>Express</strong>.
                    <br>
                    <br>
                    <img id="projectImg" src="/images/Project-diagram.png" alt="Travelevart's Project Diagram">
                    <div id="myModal" class="modal">
                        <span class="modal-close">&times;</span>
                        <img class="modal-content" id="img01">
                        <div class="modal-image-caption"></div>
                    </div>
                </p>
            </div>
            <div class="col-7">
                <form action="/register" method="post">
                    <input type="text" class="form-control mb-3" name="firstName" id="firstNameInput" placeholder="Your first name" required>
                    <input type="text" class="form-control mb-3" name="lastName" id="lastNameInput" placeholder="Your last name" required>
                    <div class="form-group mb-3">
                        <input type="email" class="form-control" name="email" id="mailInput" aria-describedby="emailHelp" placeholder="Your email" required>
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" id="passwordInput" aria-describedby="passwordHelp">
                        <small id="passwordHelp" class="form-text text-muted">Your password must be 6-20 characters long, contain letters and numbers, and must not contain spaces or emoji.</small>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="newsletterCheckbox" name="newsletterCheckbox">
                        <label class="form-check-label" for="newsletterCheckbox">Subscribe to the awesome newsletter?</label>
                    </div>
                    <button type="submit" class="btn btn-orange">Submit</button>
                </form>
            </div>
        </div>
    </div>
</main>

<!-- Footer -->
<%- include('footer') %>

<!-- Modal script -->
<script src="/javascripts/modal.js"></script>
<%- include('end_html') %>