<%- include('start_html') %>
<main class="container text-center clearfix mb-4">
    <form method="post" action="/update-post/<%= id %>" class="mb-2">
        <article class="carousel-container mx-auto">
            <div class="post-carousel">
                <div class="mx-auto">
                    <div class="post-holder text-left">
                        <div class="post-image shadow">
                            <div class="form-group m-0">
                                <img src="<%= post.featured_img %>">
                                <label for="postImage"><strong>Featured Image:</strong></label>
                                <input type="text" id="imageInput" name="postImage" value="<%= post.featured_img %>">
                            </div>
                        </div>
                        <div class="post-text">
                            <div class="post-div p-4 m-4 shadow">
                                <input style="font-size: 16px;" name="postTitle" type="text" class="form-control" id="titleInput" value="<%= post.title %>" required>
                                <textarea name="postSubtitle" id="postSubtitle" cols="30" rows="3" maxlength="100"><%= post.subtitle %></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </article>
        <article class="mb-4">
            <div class="form-group">
                <div class="row text-left">
                    <div class="col">
                        <label for="authorInput"><strong>Author</strong></label>
                        <input name="postAuthor" type="text" class="form-control is-valid" id="auhtorInput" value="<%= post.author %>" required>
                    </div>
                    <div class="col">
                        <!-- <label for="imageInput"><strong>Featured Image</strong></label>
                        <input name="postImage" type="text" class="form-control" id="imageInput" placeholder="www.google.com/images/yourimage">
                         -->
                    </div>
                </div>
            </div>
        </article>
        <!-- Summernote area: -->
        <article class="summernote-article mb-4">
            <textarea id="summernote" name="editordata"><%= post.content %></textarea>
        </article>
        <div class="clearfix">
            <button class="btn btn-primary align-right">Publish</button>
        </div>
    </form>
    <form method="post" action="/update-post/delete/<%= post.id %>" class="clearfix mb-3">
        <button class="btn btn-danger align-right">Delete</button>
    </form>
    <div class="clearfix mb-3">
        <a class="btn btn-warning align-right" href="/view-post/<%= post.id %>">Cancel</a>
    </div>
</main>

<!-- Footer -->
<%- include('footer') %>

<!-- My scripts: -->
<script src="/javascripts/summernote.js"></script>
<%- include('end_html') %>